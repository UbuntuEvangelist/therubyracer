<!-- Modal -->
<div class="modal auth_verification fade" id="authgoogleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"> Google Authentication </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body text-center">
        <div class="error_img"><img src="/jgicon.png" alt="img"></div>
        <div> Please Enable Google Authentication </div>
      </div>
      <div class="modal-footer text-center">
        <button type="button" class="btn btn-secondary" data-dismiss="modal"> Cancel </button>
        <%= link_to "Ok", settings_path, class:"btn btn-primary" %>
      </div>
    </div>
  </div>
</div>

<!-- Modal for google authentication -->
<div class="modal auth_verification fade" id="authgoogleVerify" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"> Google Authentication Verification </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body text-center">
        <div class="error_img"><img src="/jgicon.png" alt="img"></div>
        <label>Enter the Google authentication code</label>
        <div class="form-group">
          <input type="text" class="form-control" id="google_code">
          <span id="error_msg"></span>
        </div>
      </div>
      <div class="modal-footer text-center">
        <button type="button" class="btn btn-secondary" data-dismiss="modal"> Cancel </button>
        <button type="button" class="btn btn-primary" id="submit_button"> Submit </button>
      </div>
    </div>
  </div>
</div>