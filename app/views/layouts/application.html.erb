<!DOCTYPE html>
<html lang="en">
  <head>
    <!--<link href="/favicon.ico" rel="shortcut icon" />-->
    <%= favicon_link_tag 'fav_icon.png' %>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" contSent="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0, shrink-to-fit=no"/>
    <meta name="format-detection" content="telephone=no">

    <%= render 'shared/meta' %>
    <%= render 'shared/sentry' %>
    <%= csrf_meta_tags %>

    <%# stylesheet = content_for?(:stylesheet) ? yield(:stylesheet) : 'application' %>
    <%#= stylesheet_link_tag stylesheet, media: 'all' %>
    <%= render 'shared/theme' %>

    <%= include_gon %>
    <%= render 'shared/html5' %>
    <%= javascript_include_tag "locales/#{I18n.locale}" %>
    <%= javascript_include_tag 'application' %>
    <%= yield(:scripts) if content_for?(:scripts) %>

    <!-- Bootstrap css-->
    <%= stylesheet_link_tag 'node_modules/bootstrap/dist/css/bootstrap.min.css' %>
    <!-- responsive tabs css -->
    <%= stylesheet_link_tag 'css/easy-responsive-tabs.css' %>

    <!-- Custom css -->
    <%= stylesheet_link_tag 'css/main.css' %>
    <%= stylesheet_link_tag 'global/css/style' %>
    <%= javascript_include_tag 'js/jquery.cookie' %>
    <%= stylesheet_link_tag 'css/trade' if controller_name.eql?('history') %>


    <script type="text/javascript">
      jQuery(function() {
        $.cookie('tz', (new Date()).getTimezoneOffset());
      });
    </script>
  </head>

  <body data-lang="<%= locale_name %>" id="<%= body_id %>">
    <%= render 'shared/alert' %>

    <div id="wrap">
      <%= content_for?(:header) ? yield(:header) : render('shared/header') %>
      <%= content_for?(:frame) ? yield(:frame) : render('shared/frame') %>

      <div id="push"></div>

      <%= content_for?(:footer) ? yield(:footer) : render('shared/footer') %>
    </div>
  </body>
</html>
