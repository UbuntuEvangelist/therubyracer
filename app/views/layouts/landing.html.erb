<!DOCTYPE html>
<html lang="en">
  <head>
    <title>BitCorex</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=7; IE=8; IE=EmulateIE8;  IE=9; IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0, shrink-to-fit=no"/>
    <meta name="format-detection" content="telephone=no">
    <!-- favicon -->
    <%= favicon_link_tag 'fav_icon.png' %>
    <%= include_gon %>

    <!-- fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i" rel="stylesheet">
    <!-- Bootstrap css-->
    <%= stylesheet_link_tag 'node_modules/bootstrap/dist/css/bootstrap.min.css' %>
    <!-- owl slider css -->
    <%= stylesheet_link_tag 'css/owl.carousel.min.css' %>
    <!-- responsive tabs css -->
    <%= stylesheet_link_tag 'css/easy-responsive-tabs.css' %>

    <!-- Custom css -->
    <%= stylesheet_link_tag 'css/main.css' %>
    <%= stylesheet_link_tag 'newdesign' %>
    <%= stylesheet_link_tag 'global/css/style' %>


    <!-- Bootstrap Js -->
    <%= javascript_include_tag 'landing' %>
    <%= javascript_include_tag :modernizr %>
    <%= javascript_include_tag 'market' %>
    <%= javascript_include_tag 'js/jquery.cookie' %>
    <%= javascript_include_tag 'js/owl.carousel.min.js' %>

    <script>
        jQuery(function() {
          $.cookie('tz', (new Date()).getTimezoneOffset());
        });

        $(document).ready(function () {
            var owl = $('.tickers_carousel');
            owl.owlCarousel({
                items: 3,
                loop: true,
                rtl: false,
                margin:10,
                autoplay: true,
                autoplayTimeout: 1000,
                autoplayHoverPause: true,
                responsive: {
                    0: {
                        items: 1,
                    },
                    480: {
                        items: 2,
                    },
                    600: {
                        items: 3,
                    },
                    1000: {
                        items: 6
                    }
                }
            });
        });
        $(document).ready(function () {
            var owl = $('.top_carousel');
            owl.owlCarousel({
                items: 3,
                loop: true,
                rtl: false,
                margin: 0,
                navigation:false,
                pagination:false,
                nav:false,
                autoplay: true,
                autoplayTimeout: 1000,
                autoplayHoverPause: true,
                responsive: {
                    0: {
                        items: 1,
                    },
                    600: {
                        items: 1,
                    },
                    1000: {
                        items: 3
                    }
                }
            });
        });

        /* onscroll add and remove class */
        $(window).scroll(function () {
            var scroll = $(window).scrollTop();

            if (scroll >= 150) {
                $("body").addClass("fixed");
            } else {
                $("body").removeClass("fixed");
            }
        });
    </script>
  </head>

  <body id="<%= body_id %>" data-lang="<%= locale_name %>">
    <div id="wrap">
      <%= content_for?(:header) ? yield(:header) : render('shared/header') %>
      <%= render 'shared/alert' %>
      <%= yield %>
      <div id="push"></div>
      <%= content_for?(:footer) ? yield(:footer) : render('shared/footer') %>
    </div>
  </body>
</html>


