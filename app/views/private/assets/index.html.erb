<% content_for :frame do %>
  <div class="container">
    <ul class="nav nav-justified assets-nav">

      <% Currency.all.each_with_index do |ccy, i| %>
        <li data-scroll-nav="<%= i + 1 %>">
          <a><%= t(".#{ccy.type}-assets", currency: ccy.code.upcase) %></a>
        </li>
      <% end %>
    </ul>

    <% if current_user %>
      <div data-scroll-index="0"><%= render 'liability_proof' %></div>
    <% end %>
    <% Currency.all.each_with_index do |ccy, i| %>
            <div data-scroll-index="<%= i + 1 %>"><%= render "#{ccy.type}_assets", currency: ccy %></div>
         <% end %>
  </div>

<% end %>
