
<div class="container">
  <div class="row">
    <%= simple_form_for @bank  do |f| %>
        <% if @bank.errors.any? %>
            <div id="error_explanation">
              <h2>
                <%= pluralize(@bank.errors.count, "error") %> prohibited
                this bank details  from being saved:
              </h2>
              <ul>
                <% @bank.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
        <% end %>
        <div class="col-lg-12">
          <div class="row">
            <div class="row">
              <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                <%= f.input :name, label: 'name'  %>
              </div>
              <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                <%= f.input :bank_name, label: 'Bank Name'  %>
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-12">
          <div class="row">
            <div class="row">
              <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                <%= f.input :account_number, label: 'Account Number'  %>
              </div>
              <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                <%= f.input :ifsc_code, label: 'IFSC Code'  %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-12">
              <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                  <div class="row">
                    <ul class="bank-details_actions">
                      <li><%= f.button :submit, value="Add Bank detail",class:"btn btn-default btn-block enable_btn", style:'width:auto;' %></li>
                      <li><%= link_to 'Back', bank_details_path, class:"btn btn-default btn-block default_btn" %></li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>
