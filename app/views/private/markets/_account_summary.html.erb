<li id="account_summary" class="dropdown">
  <a class="dropdown-toggle" href="#" data-toggle="dropdown">
    <!--<span id="total_assets" data-title="<%#= t('.title') %>"></span>-->
    <span id="total_assets" >
      <%= t('.title') %>
    </span>
  </a>
  <div class="dropdown-menu text-right">
    <table class="table">
      <tbody>
        <% current_user.accounts.each do |account|
          next unless account.currency_obj.try(:visible) %>
          <tr class="<%= account.currency %> <%= @market.scope?(account) ? '' : 'hide' %>">
            <td class="account-symbol text-center">
              <img src="/icon-<%= account.currency %>.png" alt="<%= account.currency_obj.code_text %>"/>
              <br>
              <span><%= account.currency_obj.code_text.upcase %></span>
            </td>
            <td class="account-balance text-right">
              <span class="amount" data-title="<%= t('.amount') %>"><%= account.amount %></span>
              <br>
              <span class="locked" data-title="<%= t('.locked') %>"><%= account.locked %></span>
            </td>
          </tr>
        <% end %>
        <tr>
          <td class="text-center view_all_accounts_btn" colspan=2>
            <a class="view_all_accounts" data-hide-text="<%= t('.hide_all_accounts') %>" data-show-text="<%= t('.view_all_accounts') %>" href="#">
              <%= t('.view_all_accounts') %>
            </a>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</li>
