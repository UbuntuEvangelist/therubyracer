    <li>
      <a href="<%= settings_path %>">
        <b style="width: 100%; float: left;"> <%=t ('header.account')%></b>
        <span style="width: 100%; float: left;"><%= current_user.email || current_user.nickname %></span>
      </a>
    </li>

    <% if is_admin? %>
      <li>
        <a href="<%= admin_dashboard_path %>">
          <i></i>
